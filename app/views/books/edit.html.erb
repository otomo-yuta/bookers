<div class="edit_contents">
  <h1 class="title">Editing Book</h1>

  <!-- validates -->
  <% if @book.errors.any? %>
    <div class="validates">
      <p class="validates-title"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
      <ul class="validates-contents">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book do |f| %>
    <div class="title-contents">
      <%= f.label :title, "Title", class: "label" %>
      <%= f.text_field :title, class: "text-field" %>
    </div>

    <div class="body-contents">
      <%= f.label :body, "Body", class: "label" %>
      <%= f.text_area :body, class: "text-area" %>
    </div>

    <%= f.submit "Update Book", class: "update-button" %>
  <% end %>

  <%= link_to "Show", book_path(@book.id), class: "edit_show-link" %>
  <%= link_to "Back", books_path, class: "edit_back-link" %>
</div>